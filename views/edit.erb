<h1><%= h(@memo_info["title"]) %>を編集</h1>

<form action="/memos/<%= @memo_info["id"] %>/edit" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <label for="title">タイトル</label><br>
    <input type="text" name="title" value="<%= h(@memo_info["title"]) %>" maxlength=20>
    <p></p>
    <label for="content">本文</label><br>
    <textarea name="content" cols="40" rows="10"><%= h(@memo_info["body"]) %></textarea>
    <p></p>
    <button type="submit">保存する</button>
    <a href='/memos/<%= @memo_info["id"] %>'>キャンセル</a>
</form>
